{
  "heading-increment": true,
  "heading-style": {
    "style": "atx"
  },
  "ul-style": {
    "style": "dash"
  },
  "list-indent": true,
  "ul-indent": {
    "indent": 2
  },
  "no-trailing-spaces": true,
  "no-hard-tabs": {
    "spaces_per_tab": 2
  },
  "no-reversed-links": true,
  "no-multiple-blanks": true,
  "line-length": {
    "code_block_line_length": 120,
    "heading_line_length": 120,
    "line_length": 120
  },
  "commands-show-output": true,
  "no-missing-space-atx": true,
  "no-multiple-space-atx": true,
  "blanks-around-headings": true,
  "heading-start-left": true,
  "no-duplicate-heading": {
    "siblings_only": true
  },
  "single-h1": {
    "front_matter_title": "^\\s*title\\s*[:=]"
  },
  "no-trailing-punctuation": true,
  "no-multiple-space-blockquote": true,
  "no-blanks-blockquote": true,
  "ol-prefix": {
    "style": "ordered"
  },
  "spaces-after-list-marker": {
    "ul_single": 1,
    "ol_single": 1,
    "ul_multi": 1,
    "ol_multi": 1
  },
  "blanks-around-fences": true,
  "blanks-around-lists": true,
  "no-inline-html": false,
  "no-bare-urls": true,
  "hr-style": {
    "style": "---"
  },
  "no-emphasis-as-heading": true,
  "no-space-in-emphasis": true,
  "no-space-in-code": true,
  "no-space-in-links": true,
  "fenced-code-language": true,
  "first-line-h1": false,
  "no-empty-links": true,
  "proper-names": {
    "code_blocks": false,
    "html_elements": true,
    "names": [
      "Xenyria",
      "PaintSquad",
      "Rush",
      "Turf War",
      "Deathmatch",
      "Paintzones",
      "Eightball",
      "Rainmaker",
      "Conquest",
      "Tower Control",
      "Clam Attack",
      "Paintfest",
      "Invasion",
      "JavaScript",
      "TypeScript"
    ]
  },
  "no-alt-text": true,
  "code-block-style": {
    "style": "fenced"
  },
  "single-trailing-newline": true,
  "code-fence-style": {
    "style": "backtick"
  },
  "emphasis-style": {
    "style": "asterisk"
  },
  "strong-style": {
    "style": "asterisk"
  },
  "link-fragments": true,
  "reference-links-images": true,
  "link-image-style": {
    "autolink": true,
    "inline": true,
    "full": true,
    "collapsed": false,
    "shortcut": true
  },
  "table-pipe-style": {
    "style": "leading_and_trailing"
  },
  "table-column-count": true
}
